{
  "name": "app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite --host\" \"wait-on tcp:5173 && npm run build:electron && electron .\"",
    "build:electron": "tsc -p electron",
    "build": "npm run build:electron && tsc -b && vite build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/game-admin-tools/scum_db_admin.git"
  },
  "build": {
    "appId": "com.sda.app",
    "productName": "SCUM DB Admin",
    "icon": "public/icon.png",
    "publish": [
      {
        "provider": "github",
        "owner": "game-admin-tools",
        "repo": "scum_db_admin"
      }
    ],
    "directories": {
      "output": "dist_build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "extraFiles": [
        {
          "from": "node_modules/electron/dist/chrome_100_percent.pak",
          "to": "."
        },
        {
          "from": "node_modules/electron/dist/chrome_200_percent.pak",
          "to": "."
        }
      ]
    }
  }
}
